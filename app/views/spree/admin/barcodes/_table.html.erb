<div class="row"  >
  <div class="col-xs-6">
    <table class="index sortable" id="listing_barcodes" data-hook data-sortable-link="<%= update_positions_admin_product_variant_barcodes_url %>">
    <colgroup>
        <col style="width: 10%">
        <col style="width: 20%">
        <col style="width: 50%">
        <col style="width: 20%">
      </colgroup>
    <thead>
      <tr data-hook="images_header">
        <th class="no-border"></th>
        <th> <%= Spree.t(:format)%> </th>
        <th> <%= Spree.t(:barcode)%> </th>
        <th class="actions"></th>
      </tr>
    </thead>

    <tbody>
      <% @barcodes.each do |barcode| %>
        <tr class="spree_barcode <%= cycle('odd', 'even')%>" id="<%= spree_dom_id barcode %>" data-hook="option_row">

           <td class="no-border"><span class="handle"></span></td>
           <td class="align-center">
              <%= barcode.format %>
            </td>
          <td class="align-center">
            <%= barcode.code %>
          </td>
          <td class="actions">
            <% if can?(:update, barcode) %>
              <%= link_to_with_icon 'edit', Spree.t('actions.edit'), edit_admin_product_variant_barcode_url(@product,@variant, barcode), :no_text => true, :data => {:action => 'edit'} %>
            <% end %>
            <% if can?(:destroy, barcode) %>
              <%= link_to_delete barcode, { :url => admin_product_variant_barcode_url(@product,@variant, barcode), :remote => true,:no_text => true } %>
            <% end %>
          </td>
        </tr>
       <% end %>
       <tr id="barcodes-row"></tr>
      </tbody>
    </table>
  </div>

</div>
