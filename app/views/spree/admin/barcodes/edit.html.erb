<%= render 'spree/admin/shared/product_tabs', current: 'Variants' %>

<% admin_breadcrumb(link_to plural_resource_name(Spree::Variant), admin_product_variants_path(@product)) %>
<% admin_breadcrumb(link_to "#{@variant.sku} - #{@variant.options_text}", edit_admin_product_variant_path(@product,@variant)) %>
<% admin_breadcrumb(link_to plural_resource_name(Spree::Barcode), admin_product_variant_barcodes_path(@product,@variant)) %>
<% admin_breadcrumb("#{@barcode.format} - #{@barcode.code}")%>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @barcode } %>

<%= form_for [:admin, @product, @variant, @barcode], :authenticity_token => true do |f| %>
<fieldset>
  <%= render :partial => 'spree/admin/barcodes/form', :locals => { :f => f }  %>
  <%= render :partial => 'spree/admin/shared/edit_resource_links' , :locals => { :collection_url => admin_product_variant_barcodes_url(@product,@variant) } %>
</fieldset>
<% end %>
